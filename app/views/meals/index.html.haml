.row.header
  .span4 Meal
  .span3 Chef
  .span2 Date/Time
- @meals.each do |meal|
  .row.item
    .span4= link_to meal.name, meal_path(meal)
    .span3.chef= meal.chef
    .span2.day= "#{meal.day} (#{meal.meal.titleize})"
    .span3.tools
      #{link_to "Edit", edit_meal_path(meal)} |
      #{link_to "Delete", meal_path(meal), method: :delete, confirm: "Are you sure you want to delete this meal?"}

.row.tools.well
  .span12
    = link_to "Add Meal", new_meal_path, class: "btn btn-success"