= link_to "Meals", meals_path 
> #{ @meal.name }
> #{link_to "Edit", edit_meal_path(@meal)} | #{link_to "Delete", meal_path(@meal), method: :delete, confirm: "Are you sure you want to delete this meal?"}
| #{link_to "Add To Calendar", url_for(format: 'ics', :only_path => false, protocol: "webcal")}

%h3
  #{@meal.name}


.chef= @meal.chef
.dishwasher= @meal.dishwasher
.day #{@meal.day} (#{@meal.meal.titleize})
.description
  - if @meal.description.present?
    - @meal.description.split("\n").each do |part|
      =auto_link(part)
      %br

